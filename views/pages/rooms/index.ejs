<div id="page-wrapper">
  <div class="container-fluid">
    <!-- Tiêu đề -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Danh mục phòng</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- Bảng quản lý -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <!-- <div class="panel-heading">
                      
                  </div> -->
          <!-- /.panel-heading -->
          <div class="panel-body">
            <div class="table-responsive">
              <table
                class="table table-striped table-bordered table-hover"
                id="dataTables-example1"
              >
                <thead>
                  <tr>
                    <th width="5%">STT</th>
                    <th width="20%">Phòng</th>
                    <th width="20%">Loại phòng</th>
                    <th width="15%">Đơn giá</th>
                    <th width="25%">Ghi chú</th>
                    <th width="15%">Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach(function(item, idx) { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td><%= item.name_room%></td>
                    <td><%= item.name_category_room%></td>
                    <td><%= item.price_category_room.toLocaleString()%> đ</td>
                    <td><%= item.note_room%></td>

                    <td>
                      <form
                        method="POST"
                        action="/admin/category/delete/{{ chilID }}"
                      >
                        <a
                          class="fa fa-eye fa-fw thaotacButton"
                          title="Xem bài viết"
                          href="/category/{{ chilID }}"
                          target="_blank"
                          data-toggle="tooltip"
                        ></a>
                        <button
                          class="fa fa-edit fa-fw thaotacButton"
                          type="button"
                          onclick="location.href='/admin/category/edit/{{
                            chilID
                          }}'"
                          title="Cập nhật"
                          data-toggle="tooltip"
                        ></button>
                        <button
                          class="fa fa-remove fa-fw thaotacButton"
                          onclick="return confirm('Bạn thực sự muốn xóa chuyên mục này?')"
                          title="Xóa"
                          type="submit"
                          data-toggle="tooltip"
                        ></button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
